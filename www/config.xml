<widget xmlns     = "http://www.w3.org/ns/widgets"
        id        = "com.sky.plugins.ImeiPlugin"
        version   = "2.0.0">
    <name>phonegap iemi plugin</name>

    <description>
       phonegap
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        PhoneGap Team
    </author>

    <access origin="*"/>

    <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="index.html" />
    
        <preference name="phonegap-version" value="2.9.0" />
    <preference name="loglevel" value="DEBUG" />
    <!--
      <preference name="splashscreen" value="resourceName" />
      <preference name="backgroundColor" value="0xFFF" />
      <preference name="loadUrlTimeoutValue" value="20000" />
      <preference name="InAppBrowserStorageEnabled" value="true" />
      <preference name="disallowOverscroll" value="true" />
      preference name="orientation" value="landscape" />
    -->
        <feature name="http://api.phonegap.com/1.0/file"/>      
        <feature name="http://api.phonegap.com/1.0/media"/>
        <feature name="http://api.phonegap.com/1.0/camera"/>
    <!-- for Android -->
    <preference name="orientation" value="portrait" />
    <preference name="keepRunning" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="target-device" value="universal" />
  <!--   <preference name="android-maxSdkVersion" value="17" /> -->
    <preference name="android-minSdkVersion" value="10" />
    <preference name="backgroundColor" value="gray" />
    <preference name="loadUrlTimeoutValue" value="800000" />
    <preference name="load-url-timeout" value="800000" />
    <preference name="orientation" value="portrait" />
     <preference name="webviewbounce" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="target-device" value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen" value="false" />           <!-- all: hides the status bar at the top of the screen -->
         <preference name="loadingDialog" value="WLS, Please wait...." />
    <preference name="loadingPageDialog" value="WLS, Please wait...." />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="splash-screen-duration" value="10000" />
    <preference name="errorUrl" value="file:///android_asset/www/error.html" />
    <preference name="TopActivityIndicator" value="gray"/>
    <preference name="useBrowserHistory" value="false" />
        
    
    <feature name="App">
      <param name="android-package" value="org.apache.cordova.App"/>
    </feature>
    <feature name="Geolocation">
      <param name="android-package" value="org.apache.cordova.GeoBroker"/>
    </feature>
    <feature name="Device">
      <param name="android-package" value="org.apache.cordova.Device"/>
    </feature>
  <feature name="Accelerometer">
      <param name="android-package" value="org.apache.cordova.AccelListener"/>
    </feature>
    <feature name="Compass">
      <param name="android-package" value="org.apache.cordova.CompassListener"/>
    </feature>
    <feature name="Media">
      <param name="android-package" value="org.apache.cordova.AudioHandler"/>
    </feature>
    <feature name="Camera">
      <param name="android-package" value="org.apache.cordova.CameraLauncher"/>
    </feature>
    <feature name="Contacts">
      <param name="android-package" value="org.apache.cordova.ContactManager"/>
    </feature>
    <feature name="FileTransfer">
      <param name="android-package" value="org.apache.cordova.FileTransfer"/>
    </feature>
    <feature name="Capture">
      <param name="android-package" value="org.apache.cordova.Capture"/>
    </feature>
    <feature name="Battery">
      <param name="android-package" value="org.apache.cordova.BatteryListener"/>
    </feature>   
    <feature name="File">
      <param name="android-package" value="org.apache.cordova.FileUtils"/>
    </feature>
    <feature name="NetworkStatus">
      <param name="android-package" value="org.apache.cordova.NetworkManager"/>
    </feature>
    <feature name="Notification">
      <param name="android-package" value="org.apache.cordova.Notification"/>
    </feature>
    <feature name="Storage">
      <param name="android-package" value="org.apache.cordova.Storage"/>
    </feature>
    <feature name="SplashScreen">
      <param name="android-package" value="org.apache.cordova.SplashScreen"/>
    </feature>
    <feature name="Echo">
      <param name="android-package" value="org.apache.cordova.Echo"/>
    </feature>
    <feature name="Globalization">
      <param name="android-package" value="org.apache.cordova.Globalization"/>
    </feature>
    <feature name="InAppBrowser">
      <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
    </feature>
  
    <!-- Deprecated plugins element. Remove in 3.0 -->
    <plugins>
        <plugin name="ImeiPlugin" value="com.sky.plugins.ImeiPlugin"/>
     </plugins>
</widget>
